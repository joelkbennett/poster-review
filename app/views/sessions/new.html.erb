<article class="page-article page-poster-new">
  <header class="article-header">
    <h1 class="article-title">Log In</h1>
  </header>

  <section class="article-body">
    <%= form_tag sessions_path do %>
      <div class="form-item">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>

      <div class="form-item">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="form-item">
        <%= submit_tag "Log In" %>
      </div>
    <% end %>
  </section>

  <footer class="article-footer">
    <%= link_to "Back", posters_path %>
  </footer>
</article>
