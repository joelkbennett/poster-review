<%= form_tag session_path do %>
  <div class="form-item">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="form-item">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="form-item">
    <%= submit_tag "Log In" %>
  </div>
<% end %>