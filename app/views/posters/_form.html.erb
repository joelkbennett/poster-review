<%= form_for @poster do |f| %>
  <% if @poster.errors.any? %>
    <div class="notifications notifications-error">
      <div>
        <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
        <ul>
          <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>      
    </div>
  <% end %>

  <div class="form-item">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-item">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>

  <div class="form-item">
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
  </div>

  <div class="form-item">
    <%= f.submit "Submit" %>
  </div>
<% end %>