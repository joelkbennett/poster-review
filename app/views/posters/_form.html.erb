<%= form_for @poster do |f| %>
  <% if @poster.errors.any? %>
    <section class="notifications">
      <div class="notification notification-error">
        <div>
          <%= pluralize(@poster.errors.count, "error") %> prevented this poster from being submitted:
          <ul>
            <% @poster.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>      
      </div>
    </section>  
  <% end %>

  <div class="form-item">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-item">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>  

  <div class="form-item">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>

  <div class="form-item">
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
  </div>

  <div class="form-item">
    <%= f.submit "Submit" %>
  </div>
<% end %>