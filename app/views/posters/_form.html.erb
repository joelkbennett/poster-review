<%= form_for @poster do |f| %>
  <div class="form-item">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-item">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>

  <div class="form-item">
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
  </div>

  <div class="form-item">
    <%= f.submit "Submit" %>
  </div>
<% end %>