<article class="page-article page-poster-show">
  <header class="article-header">
    <h1 class="article-title"><%= @poster.title %></h1>
    <p><%= @poster.review_average %> / 5</p>
    <p><%= formatted_date(@poster.release_date) if @poster.release_date %></p>
  </header>

  <section class="article-body">
    
  </section>

  <footer class="article-footer">
    <%= render 'reviews' %>
  </footer>
</article>
