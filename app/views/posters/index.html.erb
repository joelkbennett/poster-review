<article class="page-article page-poster-index">
  <header class="article-header">
    <h1 class="article-title sr-only">Posters</h1>
  </header>

  <section class="poster-display">
    <div class="poster-toggle"></div>
    <div class="poster-display-inner">
      <%= render 'loading' %>
    </div>
  </section>

  <section class="article-body poster-teasers">
    <%= render partial: 'poster', collection: @posters %>
  </section>

  <footer class="article-footer">
    
  </footer>
</article>
