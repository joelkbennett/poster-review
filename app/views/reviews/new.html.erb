<article class="page-article page-poster-new">
  <header class="article-header">
    <h1 class="article-title">Rate <%= @poster.title %></h1>
  </header>

  <section class="article-body">
    <%= form_for([@poster, @review]) do |f| %>
      <% if @review.errors.any? %>
        <section class="notifications">
          <div class="notification notification-error">
            <div>
              <%= pluralize(@review.errors.count, "error") %> prevented the review from being saved:
              <ul>
                <% @review.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </section>
      <% end %>

      <div>
        <%= f.label :text %><br>
        <%= f.text_area "text" %>
      </div>
      <div>
        <%= f.label :rating %><br>
        <%= f.number_field :rating %>
      </div>
      <div><%= f.submit "Submit" %></div>
    <% end %>
  </section>

  <footer class="article-footer">
    <%= link_to "Back", posters_path %>
  </footer>
</article>
